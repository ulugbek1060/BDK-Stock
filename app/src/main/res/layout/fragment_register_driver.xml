<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".screens.main.menu.drivers.RegisterDriverFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/iv_avatar"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_marginTop="@dimen/dimen_extra"
      android:contentDescription="@string/user"
      android:gravity="center"
      android:src="@drawable/ic_drivers"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0" />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/input_layout_name"
      style="@style/TextInputLayoutStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/dimen_large"
      android:layout_marginTop="@dimen/dimen_extra"
      android:fontFamily="@font/inter_regular"
      android:layout_marginRight="@dimen/dimen_large"
      android:hint="@string/name"
      app:errorEnabled="true"
      app:layout_constraintBottom_toTopOf="@id/input_layout_phone_number"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/iv_avatar"
      app:startIconDrawable="@drawable/ic_person_24">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:imeOptions="actionNext"
        android:lines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/input_layout_phone_number"
      style="@style/TextInputLayoutStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/dimen_large"
      android:layout_marginRight="@dimen/dimen_large"
      android:fontFamily="@font/inter_regular"
      android:hint="@string/phone_number"
      app:counterEnabled="true"
      app:counterMaxLength="9"
      app:errorEnabled="true"
      app:layout_constraintBottom_toTopOf="@id/input_layout_vehicle"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/input_layout_name"
      app:prefixText="+998"
      app:startIconDrawable="@drawable/ic_call">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_phone_number"
        android:layout_width="match_parent"
        android:fontFamily="@font/inter_regular"
        android:layout_height="wrap_content"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:lines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/input_layout_vehicle"
      style="@style/TextInputLayoutStyleDropDown"
      android:fontFamily="@font/inter_regular"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/dimen_large"
      android:layout_marginRight="@dimen/dimen_large"
      android:hint="@string/vehicle"
      app:errorEnabled="true"
      app:layout_constraintBottom_toTopOf="@id/input_layout_reg_number"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/input_layout_phone_number"
      app:startIconDrawable="@drawable/ic_car">

      <AutoCompleteTextView
        android:id="@+id/auto_complete_vehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:inputType="none"
        tools:ignore="LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/input_layout_reg_number"
      style="@style/TextInputLayoutStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/inter_regular"
      android:layout_marginLeft="@dimen/dimen_large"
      android:layout_marginRight="@dimen/dimen_large"
      android:hint="@string/registration_number_of_vehicle"
      app:errorEnabled="true"
      app:layout_constraintBottom_toTopOf="@id/container_frame"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/input_layout_vehicle"
      app:startIconDrawable="@drawable/ic_list">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_reg_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:imeOptions="actionNext"
        android:lines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
      android:id="@+id/container_frame"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/dimen_large"
      android:layout_marginTop="@dimen/dimen_extra"
      android:fontFamily="@font/inter_regular"
      android:layout_marginRight="@dimen/dimen_large"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/input_layout_reg_number">

      <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:layout_marginStart="@dimen/corner_small"
        android:text="@string/save"
        android:textAllCaps="false" />

      <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotti_progress"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_layout_job_title"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading" />

    </FrameLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>