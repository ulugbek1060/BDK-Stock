<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/user"
  app:startDestination="@id/profileFragment">

  <fragment
    android:id="@+id/profileFragment"
    android:name="com.android.bdkstock.screens.main.profile.ProfileFragment"
    android:label="@string/app_name"
    tools:layout="@layout/fragment_profile">
    <action
      android:id="@+id/profile_to_userPermissions"
      app:destination="@id/userPermissionsFragment" />
  </fragment>

  <dialog
    android:id="@+id/userPermissionsFragment"
    android:name="com.android.bdkstock.screens.main.profile.UserPermissionsFragment"
    android:label="fragment_user_permissions"
    tools:layout="@layout/fragment_user_permissions" />

</navigation>