<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background_dialog"
  tools:context=".screens.main.menu.ingredients.DisplayIngredientsFragment">
  <TextView
    android:id="@+id/tv_title"
    android:layout_width="0dp"
    android:layout_height="?attr/actionBarSize"
    android:fontFamily="@font/font_bold"
    android:gravity="center_vertical"
    android:text="Импорт"
    android:textColor="@color/text_color"
    android:textSize="@dimen/text_size_big"
    android:textStyle="bold"
    app:layout_constraintLeft_toRightOf="@id/back"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/back"
    android:layout_width="wrap_content"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="@string/back"
    android:paddingHorizontal="@dimen/dimen_big"
    android:src="@drawable/ic_arrow_left"
    app:layout_constraintBottom_toBottomOf="@id/tv_title"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
    android:id="@+id/container_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_title">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dimen_big"
      android:layout_marginTop="@dimen/dimen_big"
      android:fontFamily="@font/font_bold"
      android:text="@string/name" />

    <TextView
      android:id="@+id/tv_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dimen_big"
      android:textColor="@color/text_color"
      android:textSize="20sp"
      tools:text="Kepak" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/container_amount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/container_name">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dimen_big"
      android:layout_marginTop="@dimen/dimen_big"
      android:fontFamily="@font/font_bold"
      android:text="@string/weight" />

    <TextView
      android:id="@+id/tv_amount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dimen_big"
      android:textColor="@color/text_color"
      android:textSize="20sp"
      tools:text="983462462378 kg" />

  </LinearLayout>

  <TextView
    android:id="@+id/tv_created_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_big"
    android:layout_marginTop="@dimen/dimen_big"
    android:text="created: 123412"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/container_amount" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_ingredients"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/dimen_extra"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_created_date"
    tools:listitem="@layout/recycler_item_ingredient_operation" />

</androidx.constraintlayout.widget.ConstraintLayout>