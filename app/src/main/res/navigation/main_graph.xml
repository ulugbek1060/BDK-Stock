<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_graph"
  app:startDestination="@id/signInFragment">

  <fragment
    android:id="@+id/signInFragment"
    android:name="com.android.bdkstock.screens.auth.SignInFragment"
    android:label="fragment_sign_in"
    tools:layout="@layout/fragment_sign_in">

    <action
      android:id="@+id/action_signInFragment_to_actionsFragment"
      app:destination="@id/actionsFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />

  </fragment>

  <fragment
    android:id="@+id/actionsFragment"
    android:name="com.android.bdkstock.screens.main.ActionsFragment"
    tools:layout="@layout/fragment_actions">

    <action
      android:id="@+id/action_actionsFragment_to_displayEmployeeFragment"
      app:destination="@id/displayEmployeeFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />

    <action
      android:id="@+id/action_actionsFragment_to_registerEmployeeFragment"
      app:destination="@id/registerEmployeeFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />

    <action
      android:id="@+id/action_actionsFragment_to_registerDriverFragment"
      app:destination="@id/registerDriverFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />

    <action
      android:id="@+id/action_actionsFragment_to_displayDriverFragment"
      app:destination="@id/displayDriverFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />

    <action
      android:id="@+id/action_actionsFragment_to_registerClientsFragment"
      app:destination="@id/registerClientsFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />
    <action
      android:id="@+id/action_actionsFragment_to_displayClientsFragment"
      app:destination="@id/displayClientsFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />
    <action
      android:id="@+id/action_actionsFragment_to_ingredientsTypeFragment"
      app:destination="@id/ingredientsTypeFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />
    <action
      android:id="@+id/action_actionsFragment_to_operateIngredientsFragment"
      app:destination="@id/operateIngredientsFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />

    <action
      android:id="@+id/action_actionsFragment_to_displayOperationsFragment"
      app:destination="@id/displayOperationsFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />
    <action
      android:id="@+id/action_actionsFragment_to_settingsFragment"
      app:destination="@id/settingsFragment" />
    <action
      android:id="@+id/action_actionsFragment_to_productOperationsFragment"
      app:destination="@id/productOperationsFragment" />
    <action
      android:id="@+id/action_actionsFragment_to_productsFragment"
      app:destination="@id/productsFragment" />

  </fragment>

  <fragment
    android:id="@+id/displayEmployeeFragment"
    android:name="com.android.bdkstock.screens.main.menu.employees.DisplayEmployeeFragment"
    android:label="@string/employee"
    tools:layout="@layout/fragment_display_employee">

    <argument
      android:name="employeeEntity"
      app:argType="com.android.model.repository.employees.entity.EmployeeEntity" />

  </fragment>

  <fragment
    android:id="@+id/registerEmployeeFragment"
    android:name="com.android.bdkstock.screens.main.menu.employees.RegisterEmployeeFragment"
    android:label="@string/register_employee"
    tools:layout="@layout/fragment_register_employee"/>

  <fragment
    android:id="@+id/registerDriverFragment"
    android:name="com.android.bdkstock.screens.main.menu.drivers.RegisterDriverFragment"
    android:label="@string/register_driver"
    tools:layout="@layout/fragment_register_driver"/>

  <fragment
    android:id="@+id/displayDriverFragment"
    android:name="com.android.bdkstock.screens.main.menu.drivers.DisplayDriverFragment"
    android:label="@string/driver"
    tools:layout="@layout/fragment_display_driver">

    <argument
      android:name="driverEntity"
      app:argType="com.android.model.repository.drivers.entity.DriverEntity" />

  </fragment>

  <fragment
    android:id="@+id/registerClientsFragment"
    android:name="com.android.bdkstock.screens.main.menu.clients.RegisterClientsFragment"
    android:label="@string/register_client"
    tools:layout="@layout/fragment_register_clients" />
  <fragment
    android:id="@+id/displayClientsFragment"
    android:name="com.android.bdkstock.screens.main.menu.clients.DisplayClientsFragment"
    android:label="@string/client"
    tools:layout="@layout/fragment_display_clients">
    <argument
      android:name="clientEntity"
      app:argType="com.android.model.repository.clients.entity.ClientEntity" />
  </fragment>

  <fragment
    android:id="@+id/addIngredientsFragment"
    android:name="com.android.bdkstock.screens.main.menu.ingredients.AddIngredientsFragment"
      android:label="@string/add_ingredients"
    tools:layout="@layout/fragment_add_ingredients" />

  <fragment
    android:id="@+id/ingredientsTypeFragment"
    android:name="com.android.bdkstock.screens.main.menu.ingredients.IngredientsTypeFragment"
    android:label="@string/ingredients"
    tools:layout="@layout/fragment_ingredients_type">
    <action
      android:id="@+id/action_ingredientsTypeFragment_to_addIngredientsFragment"
      app:destination="@id/addIngredientsFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />
    <action
      android:id="@+id/action_ingredientsTypeFragment_to_displayIngredientsFragment"
      app:destination="@id/displayIngredientsFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />
  </fragment>

  <fragment
    android:id="@+id/displayIngredientsFragment"
    android:name="com.android.bdkstock.screens.main.menu.ingredients.DisplayIngredientsFragment"
    android:label="@string/operation_on_ingredients"
    tools:layout="@layout/fragment_display_ingredients">

    <argument
      android:name="ingredientEntity"
      app:argType="com.android.model.repository.ingredients.entity.IngredientEntity" />
    <action
      android:id="@+id/action_displayIngredientsFragment_to_displayOperationsFragment"
      app:destination="@id/displayOperationsFragment"
      app:enterAnim="@anim/enter"
      app:exitAnim="@anim/exit"
      app:popEnterAnim="@anim/pop_enter"
      app:popExitAnim="@anim/pop_exit" />
  </fragment>
  <fragment
    android:id="@+id/operateIngredientsFragment"
    android:name="com.android.bdkstock.screens.main.menu.ingredients.OperateIngredientsFragment"
    android:label="@string/operation"
    tools:layout="@layout/fragment_operate_ingredients">
    <argument
      android:name="operationId"
      android:defaultValue="0"
      app:argType="integer" />

  </fragment>

  <fragment
    android:id="@+id/displayOperationsFragment"
    android:name="com.android.bdkstock.screens.main.menu.ingredients.DisplayOperationsFragment"
    android:label="@string/operation"
    tools:layout="@layout/fragment_display_operations">
    <argument
      android:name="operationIngredient"
      app:argType="com.android.model.repository.ingredients.entity.IngredientExOrInEntity" />
  </fragment>

  <fragment
    android:id="@+id/settingsFragment"
    android:name="com.android.bdkstock.screens.main.profile.SettingsFragment"
    android:label="fragment_settings"
    tools:layout="@layout/fragment_settings" />

  <fragment
    android:id="@+id/productOperationsFragment"
    android:name="com.android.bdkstock.screens.main.menu.products.ProductOperationsFragment"
    android:label="@string/operation"
    tools:layout="@layout/fragment_product_operations">

    <argument
      android:name="operationsStatus"
      app:argType="integer" />

  </fragment>

  <fragment
    android:id="@+id/successMessageFragment"
    android:name="com.android.bdkstock.screens.main.menu.SuccessMessageFragment"
    android:label="@string/message_fragment"
    tools:layout="@layout/fragment_success_message" />

  <fragment
    android:id="@+id/productsFragment"
    android:name="com.android.bdkstock.screens.main.menu.products.ProductsFragment"
    android:label="@string/products"
    tools:layout="@layout/fragment_products" >
    <action
      android:id="@+id/action_productsFragment_to_addProductFragment"
      app:destination="@id/addProductFragment" />
  </fragment>
  <fragment
    android:id="@+id/addProductFragment"
    android:name="com.android.bdkstock.screens.main.menu.products.AddProductFragment"
    android:label="AddProductFragment" />

</navigation>