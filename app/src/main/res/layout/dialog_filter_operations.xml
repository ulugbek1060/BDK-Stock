<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_height="wrap_content"
  tools:context=".screens.main.menu.ingredients.FilterOperationsFragment">

  <View
    android:id="@+id/thumb"
    android:layout_width="50dp"
    android:layout_height="6dp"
    android:layout_marginTop="@dimen/dimen_large"
    android:background="@drawable/thumb"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <RadioGroup
    android:id="@+id/radio_group"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="@dimen/dimen_large"
    android:layout_marginTop="@dimen/dimen_extra"
    android:layout_marginRight="@dimen/dimen_large"
    android:checkedButton="@id/button_all"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/thumb">

    <RadioButton
      android:id="@+id/button_all"
      android:layout_width="wrap_content"
      android:layout_height="45dp"
      android:layout_weight="1"
      android:tag="-1"
      android:background="@drawable/toggle_button_selection"
      android:button="@android:color/transparent"
      android:gravity="center"
      android:text="@string/all"
      android:textColor="@drawable/toggle_text_selection"
      android:textSize="16sp" />

    <RadioButton
      android:id="@+id/button_income"
      android:layout_width="wrap_content"
      android:layout_height="45dp"
      android:layout_weight="1"
      android:tag="0"
      android:background="@drawable/toggle_button_selection"
      android:button="@android:color/transparent"
      android:gravity="center"
      android:text="@string/income"
      android:textColor="@drawable/toggle_text_selection"
      android:textSize="16sp" />

    <RadioButton
      android:id="@+id/button_expense"
      android:layout_width="wrap_content"
      android:layout_height="45dp"
      android:layout_weight="1"
      android:tag="1"
      android:background="@drawable/toggle_button_selection"
      android:button="@android:color/transparent"
      android:gravity="center"
      android:text="@string/expense"
      android:textColor="@drawable/toggle_text_selection"
      android:textSize="16sp" />

  </RadioGroup>

  <TextView
    android:id="@+id/tv_from_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_large"
    android:layout_marginTop="@dimen/dimen_big"
    android:layout_marginEnd="@dimen/dimen_large"
    android:background="@drawable/search_bar_background"
    android:padding="@dimen/dimen_large"
    android:hint="@string/from_date"
    android:textColor="@color/text_color"
    android:textSize="16sp"
    app:drawableEndCompat="@drawable/ic_calendar"
    app:layout_constraintBottom_toTopOf="@id/tv_to_date"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/radio_group" />

  <TextView
    android:id="@+id/tv_to_date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_large"
    android:layout_marginTop="@dimen/dimen_big"
    android:layout_marginEnd="@dimen/dimen_large"
    android:background="@drawable/search_bar_background"
    android:padding="@dimen/dimen_large"
    android:hint="@string/to_date"
    android:textColor="@color/text_color"
    android:textSize="16sp"
    app:drawableEndCompat="@drawable/ic_calendar"
    app:layout_constraintBottom_toTopOf="@id/button_clear"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_from_date" />

  <androidx.cardview.widget.CardView
    android:id="@+id/button_clear"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginStart="@dimen/dimen_large"
    android:layout_marginTop="@dimen/dimen_big"
    android:layout_marginEnd="@dimen/dimen_normal"
    android:layout_marginBottom="@dimen/dimen_large"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/dimen_normal"
    app:cardElevation="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/button_apply"
    app:layout_constraintTop_toBottomOf="@id/tv_to_date">

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/red">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:fontFamily="@font/font_regular"
          android:lines="1"
          android:text="@string/cancel"
          android:textColor="@color/white"
          android:textSize="16sp"
          android:textStyle="bold" />

      </LinearLayout>

    </FrameLayout>

  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
    android:id="@+id/button_apply"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginStart="@dimen/dimen_normal"
    android:layout_marginTop="@dimen/dimen_large"
    android:layout_marginEnd="@dimen/dimen_large"
    android:layout_marginBottom="@dimen/dimen_large"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/dimen_normal"
    app:cardElevation="0dp"
    app:layout_constraintBottom_toBottomOf="@id/button_clear"
    app:layout_constraintLeft_toRightOf="@id/button_clear"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/button_clear">

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/blue">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:fontFamily="@font/font_regular"
          android:lines="1"
          android:text="@string/apply"
          android:textColor="@color/white"
          android:textSize="16sp"
          android:textStyle="bold" />

      </LinearLayout>

    </FrameLayout>

  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>