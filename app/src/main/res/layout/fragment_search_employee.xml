<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".screens.main.menu.employees.SearchEmployeeFragment">

  <TextView
    android:id="@+id/tv_title_employees"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:fontFamily="@font/font_bold"
    android:padding="@dimen/dimen_extra"
    android:text="@string/employees"
    android:textColor="@color/text_color"
    android:textSize="@dimen/text_size_big"
    android:textStyle="bold"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/input_layout_query"
    style="@style/TextInputLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_small"
    app:hintAnimationEnabled="false"
    app:hintEnabled="false"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_title_employees"
    app:startIconDrawable="@drawable/ic_search">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/input_query"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/search"
      android:imeOptions="actionSearch"
      android:maxLines="1" />

  </com.google.android.material.textfield.TextInputLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_employees"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="@dimen/dimen_small"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/input_layout_query"
    tools:listitem="@layout/recycler_item_employee" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_shimmer_loading"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/input_layout_query"
    tools:listitem="@layout/recycler_item_shimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>