<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_height="wrap_content"
  tools:context=".screens.main.menu.ingredients.DisplayOperationsFragment">

  <View
    android:id="@+id/thumb"
    android:layout_width="50dp"
    android:layout_height="6dp"
    android:layout_marginTop="@dimen/dimen_big"
    android:background="@drawable/thumb"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.cardview.widget.CardView
    android:id="@+id/container_operation"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_large"
    android:layout_marginTop="@dimen/dimen_large"
    android:layout_marginEnd="@dimen/dimen_large"
    app:cardCornerRadius="@dimen/corner_small"
    app:cardElevation="0dp"
    app:layout_constraintBottom_toTopOf="@id/tv_created_date"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/thumb">

    <FrameLayout
      android:id="@+id/background_operation"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white_purple"
      android:paddingStart="@dimen/dimen_large"
      android:paddingTop="@dimen/dimen_small"
      android:paddingEnd="@dimen/dimen_large"
      android:paddingBottom="@dimen/dimen_small">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
          android:id="@+id/tv_operation"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:fontFamily="@font/font_regular"
          android:lines="1"
          android:textColor="@color/purple"
          android:textSize="20sp"
          android:textStyle="bold"
          tools:text="Manager" />

      </LinearLayout>

    </FrameLayout>

  </androidx.cardview.widget.CardView>

  <TextView
    android:id="@+id/tv_created_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_large"
    android:layout_marginEnd="@dimen/dimen_large"
    app:layout_constraintBottom_toTopOf="@id/iv_creator"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/container_operation"
    tools:text="21 may 2022" />

  <ImageView
    android:id="@+id/iv_creator"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginStart="@dimen/dimen_large"
    android:layout_marginTop="@dimen/dimen_large"
    android:src="@drawable/img_avatar"
    app:layout_constraintBottom_toTopOf="@id/layout_ingredient"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/tv_creator"
    app:layout_constraintTop_toBottomOf="@id/tv_created_date" />

  <TextView
    android:id="@+id/tv_creator"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_large"
    android:layout_marginRight="@dimen/dimen_large"
    android:fontFamily="@font/font_bold"
    android:textColor="@color/text_color"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="@id/iv_creator"
    app:layout_constraintLeft_toRightOf="@id/iv_creator"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/iv_creator"
    tools:text="Admin" />

  <LinearLayout
    android:id="@+id/layout_ingredient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_large"
    android:layout_marginTop="@dimen/dimen_extra"
    android:layout_marginRight="@dimen/dimen_large"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@id/layout_amount"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/iv_creator">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/ingredient" />

    <TextView
      android:id="@+id/tv_ingredient"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/font_bold"
      android:textColor="@color/text_color"
      android:textSize="22sp"
      tools:text="Suyak kukuni" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/layout_amount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_large"
    android:layout_marginTop="@dimen/dimen_large"
    android:layout_marginRight="@dimen/dimen_large"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@id/layout_comment"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/layout_ingredient">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="amount" />

    <TextView
      android:id="@+id/tv_amount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/font_bold"
      android:textColor="@color/text_color"
      android:textSize="22sp"
      tools:text="98435439854 kg" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/layout_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_large"
    android:layout_marginTop="@dimen/dimen_large"
    android:layout_marginRight="@dimen/dimen_large"
    android:layout_marginBottom="@dimen/dimen_large"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/layout_amount">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="comment" />

    <TextView
      android:id="@+id/tv_comment"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/search_bar_background"
      android:fontFamily="@font/font_bold"
      android:padding="@dimen/dimen_normal"
      android:textColor="@color/text_color"
      android:textSize="16sp"
      tools:text="Suyak orepkgroegkrogkrooirtjgrjtjtoigjtgjogjtoigjoitgjotijgjrigjtgjiitogjtoigjtoigortjgogijtoigjtrgjtoigjtoigjtoigjtoigjotgitogjtoigjtogjtigmtog" />

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>